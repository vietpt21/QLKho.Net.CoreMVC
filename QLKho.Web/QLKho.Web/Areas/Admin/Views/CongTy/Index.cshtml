<div class="container">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Danh sach Cong Ty</h4>
                <p class="card-title-desc">
                    DataTables has most features enabled by
                    default, so all you need to do to use it with your own tables is to call
                    the construction function: <code>$().DataTable();</code>.
                </p>
                <table id="datatable" class="tblDataCongTy table table-bordered " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Ma</th>
                            <th>Ten Cong Ty</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div>

<script>
    var dataTableCongTy;

    $(document).ready(function () {
        loadDataTable();
    });

    function loadDataTable() {
        dataTableCongTy = $('#tblDataCongTy').DataTable({
            "ajax": {
                "url": "/api/CongTyApi",
                "method": "GET",
                "dataSrc": ""  // Không cần chỉ định dataSrc nếu API trả về mảng dữ liệu trực tiếp
            },
            "columns": [
                { "data": "TenCTy" },  // Tên cột dữ liệu phải trùng với tên thuộc tính của đối tượng CongTy
                // Thêm các cột khác tại đây nếu cần
            ]
        });
    }
</script>

