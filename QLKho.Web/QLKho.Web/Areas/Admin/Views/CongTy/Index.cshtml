@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Datatable Editable</h4>
                <div class="d-flex justify-content-end mb-3">
                    <button id="addCongTyBtn" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                <div class="table-responsive">
                    <table id="tblDataCongTy" class="table table-editable table-nowrap align-middle table-edits">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ten Cong Ty</th>
                                <th>Ten Day Du</th>
                                <th>Nguoi Dai Dien</th>
                                <th>Dia Chi</th>
                                <th>SDT</th>
                                <th>Email</th>
                                <th>Website</th>
                                <th>Ngay Tao</th>
                                <th>Ngay Cap Nhat</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
<!-- Modal for adding a new CongTy -->
<div class="modal fade" id="addCongTyModal" tabindex="-1" role="dialog" aria-labelledby="addCongTyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCongTyModalLabel">Add New Cong Ty</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addCongTyForm">
                    <div class="form-group">
                        <label for="TenCTy">Ten Cong Ty</label>
                        <input type="text" class="form-control" id="TenCTy" required>
                    </div>
                    <div class="form-group">
                        <label for="TenDayDu">Ten Day Du</label>
                        <input type="text" class="form-control" id="TenDayDu">
                    </div>
                    <div class="form-group">
                        <label for="NguoiDaiDien">Nguoi Dai Dien</label>
                        <input type="text" class="form-control" id="NguoiDaiDien">
                    </div>
                    <div class="form-group">
                        <label for="DiaChi">Dia Chi</label>
                        <input type="text" class="form-control" id="DiaChi">
                    </div>
                    <div class="form-group">
                        <label for="SDT">SDT</label>
                        <input type="text" class="form-control" id="SDT">
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email">
                    </div>
                    <div class="form-group">
                        <label for="Website">Website</label>
                        <input type="text" class="form-control" id="Website">
                    </div>
                    <!-- NgayTao and NgayCapNhat will be managed by server -->
                    <button type="submit" class="btn btn-primary">Add Cong Ty</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/assets/libs/jquery/jquery.min.js")"></script>
<script src="@Url.Content("~/assets/libs/datatables/datatables.min.js")"></script>
<script src="~/js/congty.js"></script>


<style>
    .editable {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
    }
</style>
